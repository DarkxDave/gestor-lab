<% layout('partials/layout') %>
<h2>Formulario CT, CF y E.coli</h2>
<form method="get" action="/form-ctcfe" class="row g-2 mb-3">
  <div class="col-auto">
    <input type="text" name="sample_id" class="form-control" placeholder="sample_id" value="<%= sampleId || '' %>" required>
  </div>
  <div class="col-auto">
    <button class="btn btn-outline-info" type="submit">Cargar</button>
  </div>
</form>
<%- include('partials/formTabs', { active: 'CT, CF y E.coli', sampleId }) %>
<div class="card p-3">
  <form method="post" action="/form-ctcfe/save">
    <input type="hidden" name="sample_id" value="<%= sampleId || '' %>">
    <div class="mb-3">
      <label class="form-label">Notas</label>
      <textarea class="form-control" name="notes" rows="3"><%= (data && data.notes) || '' %></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Guardar CT/CF/E.coli</button>
  </form>
  <% if (message) { %>
    <div class="alert alert-info mt-3"><%= message %></div>
  <% } %>
  <div class="mt-3 small text-muted">Mínimo funcional; se ampliará con campos específicos.</div>
 </div>
