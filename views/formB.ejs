<% layout('partials/layout') %>
<h2>Formulario B</h2>
<form method="get" action="/form-b/load" class="row g-2 mb-3">
  <div class="col-auto">
    <input type="text" name="sample_id" class="form-control" placeholder="sample_id" value="<%= (data && data.sample_id) || '' %>" required>
  </div>
  <div class="col-auto">
    <button class="btn btn-outline-info" type="submit">Cargar</button>
  </div>
</form>

<% if (message) { %>
  <div class="alert alert-info"><%= message %></div>
<% } %>

<form method="post" action="/form-b/save" class="card p-3">
  <div class="mb-3">
    <label class="form-label">sample_id</label>
    <input type="text" name="sample_id" class="form-control" value="<%= (data && data.sample_id) || '' %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Notas</label>
    <textarea name="notes" class="form-control" rows="3"><%= (data && data.notes) || '' %></textarea>
  </div>
  <div class="form-check form-switch mb-2">
    <input class="form-check-input" type="checkbox" role="switch" name="approved" <%= (data && data.approved) ? 'checked' : '' %>>
    <label class="form-check-label">Aprobado</label>
  </div>
  <div class="form-check form-switch mb-3">
    <input class="form-check-input" type="checkbox" role="switch" name="qc_pass" <%= (data && data.qc_pass) ? 'checked' : '' %>>
    <label class="form-check-label">QC OK</label>
  </div>
  <button class="btn btn-primary" type="submit">Guardar</button>
</form>
